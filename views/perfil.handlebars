    <div class="profile-wrapper personal-data">
        <div class="profile-data">
            <h2 class="titulo-pagina">Usu√°rio</h2>
            <div id="userdata">
                <div class="dados">
                    <div class="nomefoto-profile">
                        <p id="dado-nome">{{nome}}</p>
                        <img id="dado-foto" src="{{link_avatar}}" alt="Foto do usu√°rio">
                    </div>
                </div>
            </div>
            
        </div>
        <div class="profile-data">
            <h2 class="titulo-pagina">Listas</h2>
            <form action="/lista" method="post" autocomplete="off">
                <p class="texto-pagina">Para criar uma lista, digite um nome de at√© 30 caracteres:</p>
                <div class="inputwrapper">
                    <div>
                        <input type="textarea" id="nome" name="nome" maxlength="30" required>
                    </div>
                </div>
                <button id="analise" type="submit">Criar lista</button>
            </form>
            <div id="listas">
                {{#each listas}}
                <div class="lista">
                    <h3 class="titulo-pagina-2">{{nome_lista}}</h2>
                    {{#each itens}}
                    <div class="dado-itemlista">
                        <div class="dado-itemlista-circulo">
                            <p class="dado-itemlista-numero">{{inc @index}}</p>
                        </div>
                        <img class="dado-itemlista-capa" src="{{poster_item}}" alt="Capa do item do sistema">
                        <div class="dado-itemlista-span">
                                <p class="dado-itemlista-nome">{{nome}}</p>
                            <p class="dado-itemlista-ano">{{data}}</p>
                        </div>
                        <form action="/unlinkitem" method="post">
                            <input type="hidden" value={{id_lista}} id="id_lista" name="id_lista">
                            <input type="hidden" value={{id_item}} id="id_item" name="id_item">
                            <button id="analise" type="submit">Remover</button>
                        </form>
                    </div>
                    {{/each}}
                </div>
                {{/each}}
            </div>
        </div>
    </div>

        <div class="profile-wrapper">
        <div class="atividade">
            <h2 class="titulo-pagina">Atividade</h2>
            <p class="texto-pagina">Abaixo est√£o dispostas suas avalia√ß√µes realizadas na plataforma :)</p>
