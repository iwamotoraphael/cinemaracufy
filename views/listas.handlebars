    <div class="review-wrapper">
        <div class="review-data">
            <h2 class="titulo-pagina" id="review-nome">Item</h2>
            <div id="conteudo-itemsistema">
                <div class="dados-itemsistema">
                    <img id="dado-foto" src="{{foto}}" alt="Capa do item do sistema">
                    <div class="dado-itemsistema">
                        <p id="dado-nome">{{nome}}</p>
                        <p class="dado-ano">{{lancamento}}</p>
                    </div>
                </div>
                <p class="dado-sinopse">{{sinopse}}</p>
            </div>
            
        </div>
        <div class="review-data">
            <h2 class="titulo-pagina">Informa√ß√µes</h2>
            
        </div>
    </div>

    <div class="review-wrapper">
       <div class="user-review-data">
            <h2 class="titulo-pagina">Listas</h2>
            <div id="listas">
                {{#each listas}}
                <div class="lista">
                    <h3 class="titulo-pagina-2">{{nome_lista}}</h2>
                    <form action="/linkitem" method="post">
                        <input type="hidden" value={{id_lista}} id="id_lista" name="id_lista">
                        <input type="hidden" value={{id_item}} id="id_item" name="id_item">
                        <button id="analise" type="submit">Adicionar √† lista</button>
                    </form>
                    {{#each itens}}
                    <div class="dado-itemlista">
                        <div class="dado-itemlista-circulo">
                            <p class="dado-itemlista-numero">{{inc @index}}</p>
                        </div>
                        <img class="dado-itemlista-capa" src="{{poster_item}}" alt="Capa do item do sistema">
                        <div class="dado-itemlista-span">
                            <a href="">
                                <p class="dado-itemlista-nome">{{nome}}</p>
                            </a>
                            <p class="dado-itemlista-ano">{{data}}</p>
                        </div>
                        {{/each}}
                    </div>
                </div>
                {{/each}}
            </div>
       </div>
    </div>

    <div class="review-wrapper">
        <div class="user-review-data">
            <h2 class="titulo-pagina">Review</h2>
            <div id="titulo-avaliar-item"></div>
            <form action="/filme/?id={{id}}" method="post" autocomplete="off">
                <p>Nota (0 - 10)</p>
                <div class="inputwrapper">
                    <div>
                        <input type="number" id="nota" name="nota" min="0" max="10" required>
                    </div>
                </div>

                <p>Coment√°rio (at√© 500 caracteres)</p>
                <div class="inputwrapper">
                    <div>
                        <input type="textarea" id="comentario" name="comentario" maxlength="500">
                    </div>
                </div>
                <br/>
                <button id="analise" type="submit">Enviar an√°lise</button>
            </form>
            {{#if error}}<p id="erro">Erro na postagem</p>{{/if}}
        </div>

    </div>

    <div class="review-wrapper">
        <div class="user-review-history">
            <h2 class="titulo-pagina">Hist√≥rico</h2>
            <p>Reviews realizadas por outros usu√°rios da plataforma.</p>
            <div id="conteudo-reviews-feitas">
                {{#each analises}}
                <div class="review-usuario">
                    <img class="review-capa-album" src="{{link_avatar}}">
                    <div class="review-span">
                        <span class="review-nome-usuario">{{nome_usuario}}</span>
                        <span class="review-date">{{data}}<br/></span>
                        <span class="review-nota">‚≠ê	Avalia√ß√£o: </span>
                        <span class="review-nota-dada">{{nota}}/10</span>
                        <span class="review-nota">üëç Curtidas: </span>
                        <span class="review-curtidas-dadas">{{likes}}</span>
                        <span class="review-curtir">
                        {{#if curtida}}
                        <form id="like" action="/unlike" method="post"><input type="hidden" id="idr" name="idr" value="{{id_avaliacao}}"><button type="submit" formtarget="_blank">üëé Descurtir</button></form></span>
                        {{else}}
                        <form id="like" action="/like" method="post"><input type="hidden" id="idr" name="idr" value="{{id_avaliacao}}"><button type="submit" formtarget="_blank">üëç Curtir</button></form>
                        {{/if}}
                        </span>

                        {{#if apagar}}<span class="review-apagar"><form id="apagar" action="/delete" method="post"><input type="hidden" id="idr" name="idr" value="{{id_avaliacao}}"><input type="hidden" id="idm" name="idm" value="{{id_musica}}"><button type="submit">Apagar</button></form></span>{{/if}}

                        <p class="review-conteudo"> {{comentario}}</p>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>

    </div>

    

