    <div class="review-wrapper">
        <div class="review-data">
            <h2 class="titulo-pagina" id="review-nome">S√©rie</h2>
            <div id="conteudo-itemsistema">
                <div class="dados-itemsistema">
                    <img id="dado-foto" src="{{foto}}" alt="Capa do item do sistema">
                    <div class="dado-itemsistema">
                        <p id="dado-nome">{{nome}}</p>
                        <p class="dado-ano">{{lancamento}}</p>
                        <button id="lista" type="submit">Adicionar √† minha lista</button>
                    </div>
                </div>
                <p class="dado-sinopse">{{sinopse}}</p>
            </div>
            
        </div>
        <div class="review-data">
            <h2 class="titulo-pagina">Informa√ß√µes</h2>
            <div id="info-itemsistema">
                <div class="dado-generos">
                    <p id="dado-genero-titulo">G√™neros:</p>
                    {{#each generos}}
                    <span class="dado-genero-nome">{{this}}</span>
                    {{/each}}
                </div>

                <div class="dado-generos">
                    <p id="dado-genero-titulo">Plataformas:</p>
                    {{#each plataformas}}
                    <span class="dado-genero-nome">{{nome_plataforma}}</span>
                    {{/each}}
                </div>

                <div class="dados-companhia">
                    {{#each companhias}}
                    <img id="dado-foto-companhia" src="{{poster_companhia}}" alt="">
                    <div class="dado-companhia">
                        <p id="dado-nome-companhia">{{nome_companhia}}</p>
                    </div>  
                    {{/each}}
                </div>
            </div>
        </div>
    </div>

    <div class="review-wrapper">
       <div class="user-review-data">
            <h2 class="titulo-pagina">Cast</h2>
            <div id="cast">
                {{#each cast}}
                <div class="pessoa-cast">
                    <div class="conteudo-cast">
                        <div>{{nome_cast}}</div>
                        <img class="cast-foto" src="{{foto_pessoa}}">
                    </div>
                </div>
                {{/each}}
            </div>
       </div>
    </div>

    <div class="review-wrapper">
        <div class="review-data">
            <h2 class="titulo-pagina">Informa√ß√µes</h2>
            <div id="info-itemsistema">
                {{#each emissoras}}
                <div class="dados-companhia">
                    <img id="dado-foto-companhia" src="{{logo_emissora}}" alt="">
                    <div class="dado-companhia">
                        <p id="dado-nome-companhia">{{nome_emissora}}</p>
                    </div>  
                </div>
                {{/each}}

                {{#each criadores}}
                <div class="dados-companhia">
                    <img id="dado-foto-companhia" src="{{foto_criador}}" alt="">
                    <div class="dado-companhia">
                        <p id="dado-nome-companhia">{{nome_criador}}</p>
                    </div>  
                </div>
                {{/each}}

            </div>
        </div>
    </div>

    <div class="review-wrapper">
        <div class="user-review-data">
            <h2 class="titulo-pagina">Review</h2>
            <div id="titulo-avaliar-musica"></div>
            <form action="/musica/?id={{idm}}" method="post" autocomplete="off">
                <p>Nota (0 - 10)</p>
                <div class="inputwrapper">
                    <div>
                        <input type="number" id="nota" name="nota" min="0" max="10" required>
                    </div>
                </div>

                <p>Coment√°rio (at√© 500 caracteres)</p>
                <div class="inputwrapper">
                    <div>
                        <input type="textarea" id="comentario" name="comentario" maxlength="500">
                    </div>
                </div>
                <br/>
                <button id="analise" type="submit">Enviar an√°lise</button>
            </form>
            {{#if error}}<p id="erro">Erro na postagem</p>{{/if}}
        </div>

    </div>

    <div class="review-wrapper">
        <div class="user-review-history">
            <h2 class="titulo-pagina">Hist√≥rico</h2>
            <p>Reviews realizadas por outros usu√°rios da plataforma.</p>
            <div id="conteudo-reviews-feitas">
                {{#each analises}}
                <div class="review-usuario">
                    <img class="review-capa-album" src="https://image.tmdb.org/t/p/original/6JjfSchsU6daXk2AKX8EEBjO3Fm.jpg">
                    <div class="review-span">
                        <span class="review-nome-usuario">{{nome}}</span>
                        <span class="review-date">{{data}}<br/></span>
                        <span class="review-nota">‚≠ê	Avalia√ß√£o: </span>
                        <span class="review-nota-dada">{{nota}}/10</span>
                        <span class="review-nota">üëç Curtidas: </span>
                        <span class="review-curtidas-dadas">{{relevancia}}</span>

                        <span class="review-curtir"><form id="like" action="/like" method="post"><input type="hidden" id="idr" name="idr" value="{{id_avaliacao}}"><button type="submit" formtarget="_blank">{{#if curtida}}üëé Descurtir{{else}}üëç Curtir{{/if}}</button></form></span>

                        {{#if apagar}}<span class="review-apagar"><form id="apagar" action="/delete" method="post"><input type="hidden" id="idr" name="idr" value="{{id_avaliacao}}"><input type="hidden" id="idm" name="idm" value="{{id_musica}}"><button type="submit">Apagar</button></form></span>{{/if}}

                        <p class="review-conteudo"> {{comentario}}</p>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>

    </div>

    

